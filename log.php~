<?php
function AutoLogger($logDir,$logType,$action){
	if(!(is_dir("./log/")))mkdir("log",0777);
	$timestamp = round(microtime(true) * 1000);
	$logFile = fopen($logDir.$logType.".log", "a+");
	$log = $timestamp."\t".$action."\n";
	fwrite($logFile, $log);
	fclose($logFile);
	
	$Date = date_create();
	$interval=date_format($Date,"ym");
	$totalLog = fopen($logDir.$interval.".System.log", "a+");
	$log = $timestamp."\t".$action."\n";
	fwrite($totalLog, $log);
	fclose($totalLog);
}
?>
